# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# Data Directories
# These default to ./instances and ./backups if not set
DATA_DIR=./instances
BACKUPS_DIR=./backups

# Google Pay Configuration
# Required for Google Pay payment integration
# Get these from your Google Pay merchant account

# Your UPI ID (e.g., yourname@paytm, yourname@upi, etc.)
GOOGLE_PAY_MERCHANT_VPA=your-merchant-vpa@upi

# Your merchant/business name (shown to customers during payment)
GOOGLE_PAY_MERCHANT_NAME=The SRS Consulting

# Merchant Category Code (MCC) - default is 0000 (unspecified)
# You can get your actual MCC from your payment processor
GOOGLE_PAY_MERCHANT_CODE=0000

# Callback URL for payment verification
# This should be your server URL + the callback endpoint
# Format: https://yourdomain.com/{instance_name}/customer/loan/{loan_id}/gpay/callback
# Example: https://example.com/prod/customer/loan/123/gpay/callback
# Note: The {loan_id} part will be replaced dynamically in the code
GOOGLE_PAY_CALLBACK_URL=https://yourdomain.com/{instance_name}/customer/loan/{loan_id}/gpay/callback

# Customer UI: show interest rate (%) to customers on loans list and loan detail (default: false)
# CUSTOMER_SHOW_INTEREST_RATE=true
CUSTOMER_SHOW_INTEREST_RATE=false
